{
  "name": "UniRequest",
  "version": "1.0.0",
  "description": "Universal Request Standard for Modern Web and Multi-Platform Apps",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "commit:check": "lavy commit --test",
    "commit:config": "lavy commit --config",
    "demo": "tsx example/node/example.ts"
  },
  "keywords": [],
  "author": "Gavin",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-lavy": "^2.0.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lavy": "^2.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "swiftlet": "^1.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.7.7"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
