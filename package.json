{
  "name": "@gvray/request",
  "version": "1.0.0-alpha.0",
  "description": "Universal Request Standard for Modern Web and Multi-Platform Apps",
  "type": "module",
  "main": "dist/gvray-request.cjs.js",
  "module": "dist/gvray-request.esm.js",
  "types": "dist/gvray-request.d.ts",
  "unpkg": "dist/gvray-request.min.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/gvray-request.d.ts",
        "default": "./dist/gvray-request.esm.js"
      },
      "require": {
        "types": "./dist/gvray-request.d.ts",
        "default": "./dist/gvray-request.cjs.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "commit:check": "lavy commit --test",
    "commit:config": "lavy commit --config",
    "demo": "tsx example/node/example.ts",
    "build": "swiftlet build",
    "dev": "swiftlet dev",
    "playground": "pnpm -C examples/request-app dev",
    "playground:vanilla": "concurrently \"pnpm -C examples/backend dev\" \"pnpm -C examples/frontend dev\"",
    "prepublish": "pnpm build"
  },
  "keywords": [
    "request",
    "http",
    "axios",
    "fetch",
    "api",
    "rest",
    "client",
    "universal",
    "multi-platform",
    "interceptor",
    "typescript"
  ],
  "author": "Gavin",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-lavy": "^2.0.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lavy": "^2.0.6",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "swiftlet": "^1.2.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8",
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "axios": "^1.7.7"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
